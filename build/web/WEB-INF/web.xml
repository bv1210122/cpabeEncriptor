<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>AtributoServlet</servlet-name>
        <servlet-class>cpabe.controladores.AtributoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsuarioServlet</servlet-name>
        <servlet-class>cpabe.controladores.UsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CPABEServlet</servlet-name>
        <servlet-class>cpabe.controladores.CPABEServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadServlet</servlet-name>
        <servlet-class>cpabe.controladores.UploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CPABEAdvancedServlet</servlet-name>
        <servlet-class>cpabe.controladores.CPABEAdvancedServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AtributoServlet</servlet-name>
        <url-pattern>/AtributoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsuarioServlet</servlet-name>
        <url-pattern>/UsuarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CPABEServlet</servlet-name>
        <url-pattern>/CPABEServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadServlet</servlet-name>
        <url-pattern>/UploadServlet</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>tempfile.dir</param-name>
        <param-value>tmpfiles</param-value>
    </context-param>
    <servlet-mapping>
        <servlet-name>CPABEAdvancedServlet</servlet-name>
        <url-pattern>/CPABEAdvancedServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
